Group = str(input())
group = Group.lower()
group_all = 'ones', 'twos', 'threes', 'fours', 'fives', 'sixes', 'three of a kind', 'four of a kind', 'full house', 'small straight', 'large straight', 'yahtzee', 'chance'


#need to loop if it gets to else and if scoresheet has value of 1

if group == 'y':
  print(displayInventory(chart)) # Scoresheet
  print('''Choose what group you want to apply the dice to.
  ex = Three of a kind : ''', end = " ")
elif group in group_all:
  chart[Group.title()].append(1)
  print(displayInventory(chart))
else:
  print('''Input doesn't match try again.
#Make sure you include the spaces, capitilization doesn't matter.''')
