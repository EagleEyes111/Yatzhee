#Yahtzee
import random

print('Welcome to Yahtzee, press enter to start', end = " ")

chart = {'Ones': 0, 'Twos': 0, 'Threes': 0, 'Fours': 0, 'Fives': 0, 'Sixes': 0, 'Three Of A Kind': 0, 'Four Of A Kind': 0, 'Full House': 0, 'Small Straight': 0, 'Large Straight': 0, 'Yahtzee': 0, 'Chance': 0}

start = input()
 
def displayInventory(chart):
  print("Scoresheet:")
  for k, v in chart.items():
    print(v, k)
  return ''
print(displayInventory(chart))

dice1 = random.randint(1,6)
dice2 = random.randint(1,6)
dice3 = random.randint(1,6)
dice4 = random.randint(1,6)
dice5 = random.randint(1,6)
roll = (dice1, dice2, dice3, dice4, dice5)

print(dice1, dice2, dice3, dice4, dice5)
print()

print('''Type the position you want to reroll.
If you don't want to reroll hit enter.
ex = 134 : ''', end = " ")

#this is ths start of roll 2

Roll = list(input())

x = len(Roll)

while x < 5:
  Roll.append('0')
  x += 1

#1
if Roll[0] == '1':
  dice1 = random.randint(1,6)
elif Roll[0] == '2':
  dice2 = random.randint(1,6)
